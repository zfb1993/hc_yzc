{include file="common/head"/}
<style>
	.layui-center{text-align:center;}
	.layui-img{width:50%;height:auto;display:inline-block;text-align:center;margin:20px auto;}
</style>
<script>
    var ADMIN = '__STATIC__/admin/';
</script>
<div class="layui-layout layui-layout-admin kit-layout-admin">
    <div class="layui-padded-15">
      <blockquote class="layui-elem-quote layui-text" style="margin-bottom:5px;">
        <h4>当前位置：{:lang('certManage')}<i class="fa fa-angle-right layui-padded-l-10 layui-padded-r-10"></i>{:lang('certList')}</h4>
      </blockquote>
	  <div class="layui-form">
      <div class="layui-form-item" style="margin-bottom: 5px;">
        <div class="layui-inline">
          <label class="layui-form-label" style="padding:9px 0;">审核时间：</label>
          <div class="layui-input-inline" style="margin-right:0;width: 150px;">
            <input type="text" class="layui-input" id="reg_start_time" placeholder="yyyy-MM-dd">
          </div>
          <label class="layui-form-label" style="width:auto;display:inline-block;padding:9px 5px;color:#ccc;">-</label>
          <div class="layui-input-inline" style="margin-right:20px;width: 150px;">
            <input type="text" class="layui-input" id="reg_end_time" placeholder="yyyy-MM-dd">
          </div>
		  <label class="layui-form-label" style="padding:9px 0;">类型：</label>
			<div class="layui-input-inline" style="margin-right:0;width: 120px;">
			  <select id="type" name="type">
				<option value="0" selected>未审核</option>
				<option value="1">已审核</option>
				<option value="-1">已拒绝</option>
			  </select>
			</div>
          <label class="layui-form-label" style="padding:9px 0;">关键词：</label>
          <div class="layui-input-inline" style="margin-right:30px;width: 200px;">
            <input type="text" id="keywords" name="keywords" required  placeholder="关键词：姓名或手机号"  class="layui-input">
          </div>
          <button class="layui-btn" id="layui-search-btn" data-type="reload" style="width:100px;"><i class="layui-icon">&#xe615;</i> 搜索 </button>
          <button class="layui-btn layui-btn-warm" id="layui-reset-btn" style="width:100px;"> 重置 </button>
        </div>
      </div>
    </div>
      <div class="layui-form">
          <table class="layui-table" id="list" lay-filter="list"></table>
      </div>
    </div>
</div>
{include file="common/foot"/}
<script type="text/html" id="action">
  <a class="layui-btn layui-btn-sm" lay-event="detail">查看</a>
  {{#  if(d.status == '未审核'){ }}
  <a class="layui-btn layui-btn-warm layui-btn-sm" lay-event="checked">审核</a>
  <a class="layui-btn layui-btn-danger layui-btn-sm" lay-event="refused">拒绝</a>
  {{#  } }}
  {{#  if(d.status == '已审核'){ }}
  <a class="layui-btn layui-btn-disabled layui-btn-sm" lay-event="disabled">审核</a>
  <a class="layui-btn layui-btn-disabled layui-btn-sm" lay-event="disabled">拒绝</a>
  {{#  } }}
  
</script>
<script>
    var message;
    layui.config({
        base: ADMIN+'build/js/',
        version: '1.0.1'
    }).use(['app','table', 'form','laydate','message'], function() {
        var app = layui.app,
            $ = layui.jquery,
            table = layui.table,
			form = layui.form,
            laydate = layui.laydate,
            layer = layui.layer;
        //将message设置为全局以便子页面调用
        message = layui.message;
        //主入口
        app.set({
            type: 'iframe'
        }).init();
    //列表数据
    var tableIn = table.render({
        elem: '#list',
        url: '{:url("cert/index")}',
        method: 'post',
        page: true,
        cols: [[
            {field:'id', align:'center',title:'ID',width:80, sort: true, fixed: true},
            {field:'user_name',align:'center',title:'账号', width:150, sort: true},
            {field:'true_name',align:'center',title:'姓名', width:120, sort: true},
            {field:'idcard', align:'center',title:'身份证号',width:100},

            {field:'bank_name',align:'center',title:'开户银行', width:150, sort: true},
    {field:'bank_addr',align:'center',title:'开户支行', width:150, sort: true},
            {field:'bank_card',align:'center',title:'银行卡号', width:120, sort: true},
   

            {field:'up_time',align:'center',title:'提交时间', width:180, sort: true},
            {field:'check_time',align:'center', title:'审核时间',width:180,sort: true},
            {field:'status', align:'center', title:'状态',width:120},
            {field:'memo',align:'center',title:'备注', width:200},
            {width: 200, align: 'center', toolbar: '#action',title:'操作'}
        ]],
        limit: 10,
		id:'check_list',
        height: 650 //固定值
    });
	//时间控件渲染
    laydate.render({
      elem: '#reg_start_time'
    });
    laydate.render({
      elem: '#reg_end_time'
    });
    //搜索
	var $ = layui.$, active = {
		reload: function(){
			var start_time = $('#reg_start_time');
			var end_time = $('#reg_end_time');
			var keywords=$('#keywords');
			var type=$('#type option:selected');
			//执行重载
			table.reload('check_list', {
				page: {
					curr: 1 //重新从第 1 页开始
				}
				,url:"{:url('cert/search_list')}"
				,where: {
					keywords:keywords.val(),
					start_time:start_time.val(),
					end_time:end_time.val(),
					type:type.val()
				}
			});
		}
	};
	//提交
	$('#layui-search-btn').on('click', function(){
		var type = $(this).data('type');
		active[type] ? active[type].call(this) : '';
	});
	//重置
	$('#layui-reset-btn').click(function(){
		$('input[type="text"]').val('');
		tableIn.reload();
	});
    //监听工具条
    table.on('tool(list)', function(obj){
      var data = obj.data;
      if(obj.event === 'detail'){
		$.post("{:url('cert/viewInfo')}",{'uid':data.uid,'type':data.type},function(res){
			//alert(JSON.stringify(res));
			var str='';
				str+='<div id="layer-photos-demo" class="layui-user">';
				str+='<h4 class="layui-center">身份证正面图</h4>';
				str+='<div class="layui-center"><img class="layui-img" src="'+res.card_id_img_top+'" /></div>';
				str+='<h4 class="layui-center">身份证背面图</h4>';
				str+='<div class="layui-center"><img class="layui-img" src="'+res.card_id_img_bot+'" /></div>';
				str+='<h4 class="layui-center">银行卡正面图</h4>';
				str+='<div class="layui-center"><img class="layui-img" src="'+res.bank_card_img_top+'" /></div>';
				str+='</div>';
			layer.open({
				type: 1,
				skin: 'layui-user-reg',
				title:'编辑资料',
				area:['850px','600px'],
				content: str //注意，如果str是object，那么需要字符拼接。
			});
			layer.photos({
			  photos: '#layer-photos-demo'
			  ,anim: 5 //0-6的选择，指定弹出图片动画类型，默认随机（请注意，3.0之前的版本用shift参数）
			});
		});
        //layer.msg('ID：'+ data.id + ' 的查看操作');
      } else if(obj.event === 'refused'){
        layer.prompt({
            formType: 2,
            value: '请输入拒绝通过的原因',
            title: '备注',
            area: ['300px', '80px'] //自定义文本域宽高
          }, function(value, index, elem){
            $.post("{:url('cert/refused')}",{'id':data.id,'memo':value},function(res){
              if(res.code==1){
                layer.msg(res.msg,{icon:1,time:1500},function(){
                  layer.close(index);
                  tableIn.reload();
                });
              }else if(res.code==0){
                layer.msg(res.msg,{icon: 2, time: 1500},function(){
                  layer.close(index);
                  tableIn.reload();
                });
              }else{
                layer.msg(res.msg,{icon: 2, time: 1500},function(){
                  layer.close(index);
                  tableIn.reload();
                });
              }
            });
          });
      } else if(obj.event === 'checked'){
        //layer.alert('编辑行：<br>'+ JSON.stringify(data))
		//if(data.status==0||data.status==-1){
			$.post("{:url('cert/checked')}",{'id':data.id,'uid':data.uid,'type':data.type},function(res){
				if(res.code==1){
					layer.msg(res.msg,{icon:1,time:1000},function(){
						tableIn.reload();
					});
				}else{
					layer.msg(res.msg,{icon:2,time:1000},function(){
						tableIn.reload();
					});
				}
			});
		//}
      }
    });


        
  });
</script>
</body>
</html>