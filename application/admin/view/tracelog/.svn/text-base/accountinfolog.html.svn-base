{include file="common/head"/}
<script>
    var ADMIN = '__STATIC__/admin/';
</script>
<div class="layui-layout layui-layout-admin kit-layout-admin">
  <div class="layui-padded-15">
    <blockquote class="layui-elem-quote layui-text">
        <h4>当前位置：{:lang('customerManage')}<i class="fa fa-angle-right layui-padded-l-10 layui-padded-r-10"></i>{:lang('moneySearch')}</h4>
    </blockquote>
    <div class="layui-form">
      <div class="layui-form-item" style="margin-bottom: 5px;">
        <div class="layui-inline">
          <label class="layui-form-label" style="padding:9px 0;">时间：</label>
          <div class="layui-input-inline" style="margin-right:0;width: 150px;">
            <input type="text" class="layui-input" id="reg_start_time" placeholder="yyyy-MM-dd">
          </div>
          <label class="layui-form-label" style="width:auto;display:inline-block;padding:9px 5px;color:#ccc;">-</label>
          <div class="layui-input-inline" style="margin-right:20px;width: 150px;">
            <input type="text" class="layui-input" id="reg_end_time" placeholder="yyyy-MM-dd">
          </div>
          <label class="layui-form-label" style="padding:9px 0;">所属机构：</label>
          <div class="layui-input-inline" style="margin-right:0;width: 150px;">
            <input type="text" name="ins_name" id="ins_name"  placeholder="请输入所属机构"  class="layui-input">
          </div>
          <label class="layui-form-label" style="padding:9px 0;">关键词：</label>
          <div class="layui-input-inline" style="margin-right:30px;width: 200px;">
            <input type="text" id="keywords" name="keywords" required  placeholder="关键词：账号"  class="layui-input">
          </div>
          <button class="layui-btn" id="layui-search-btn" data-type="reload" style="width:100px;"><i class="layui-icon">&#xe615;</i> 搜索 </button>
          <button class="layui-btn layui-btn-warm" id="layui-reset-btn" style="width:100px;"> 重置 </button>
		  <button class="layui-btn layui-btn-danger" id="layui-export-btn" style="width:100px;"> 导出 </button>
        </div>
      </div>
    </div>
    <div class="layui-form">
      <table class="layui-table" id="list" lay-filter="list" style="margin-top:0;"></table>
    </div>
	  <div>
		  <fieldset class="layui-elem-field layui-field-title site-title">
			  <legend><a name="default">数据统计(所有数据)</a></legend>
		  </fieldset>
		  <table class="layui-table">
			  <colgroup>
				  <col width="150">
				  <col width="200">
				  <col>
			  </colgroup>
			  <thead>
			  <tr>
				  <th>上日总留存</th>
				  <th>总可用资金</th>
				  <th>总出入金</th>
				  <th>总入金</th>
				  <th>总出金</th>
				  <th>总期末权益</th>
			  </tr>
			  </thead>
			  <tbody>
			  <tr>
				  <td id="prebalance"></td>
				  <td id="available"></td>
				  <td id="crj"></td>
				  <td id="deposit"></td>
				  <td id="withdraw"></td>
				  <td id="balance"></td>
			  </tr>
			  </tbody>
		  </table>
	  </div>
  </div>
</div>
{include file="common/foot"/}
<script src="/static/js/jquery.min.js" type="text/javascript" charset="utf-8"></script>
<script>
    var message;
    layui.config({
        base: ADMIN+'build/js/',
        version: '1.0.1'
    }).use(['app','table','form','laydate','message'], function() {
        var app = layui.app,
            $ = layui.jquery,
            table = layui.table,
            laydate = layui.laydate,
            layer = layui.layer;
        //将message设置为全局以便子页面调用
        message = layui.message;
        //主入口
        app.set({
            type: 'iframe'
        }).init();

		seart();
	//列表数据
    var tableIn = table.render({
        elem: '#list',
        url: '{:url("Tracelog/accountInfoLog")}',
        method: 'post',
        page: true,
        cols: [[
			{type:'numbers',title:'序号',fixed: true},
			{field:'create_time',align:'center',title:'时间', width:170, sort: true},
			{field:'zaccount',align:'center',title:'账号', width:130},
			{field:'true_name',align:'center',title:'姓名', width:100},
			{field:'mobile',align:'center',title:'手机号',width:120},
			{field:'p_name',align:'center', title:'上级代理',width:100},
			{field:'prebalance',align:'center', title:'上日结存',width:100},
			{field:'available',align:'center', title:'可用资金',width:100},
			{field:'crj', align:'center',title:'出入金',width:80},
			{field:'deposit', align:'center',title:'入金',width:80},
			{field:'withdraw', align:'center',title:'出金',width:80},
			{field:'balance', align:'center',title:'期末权益',width:100},
			{field:'fxd', align:'center',title:'风险度',width:80},
			{field:'commission', align:'center',title:'总手续费',width:120},
			{field:'currmargin', align:'center',title:'保证金',width:80},
			{field:'closeprofit', align:'center',title:'平仓盈亏',width:100},
			{field:'positionprofit', align:'center',title:'持仓盈亏',width:100},
			{field:'total_profit', align:'center',title:'总盈亏',width:100},
        ]],
		id:'money_list',
        height: 550 //固定值
    });
    //时间控件渲染
    laydate.render({
      elem: '#reg_start_time'
    });
    laydate.render({
      elem: '#reg_end_time'
    });
    //搜索
	var $ = layui.$, active = {
		reload: function(){
			var start_time = $('#reg_start_time');
			var end_time = $('#reg_end_time');
			var keywords=$('#keywords');
			var ins_name=$('#ins_name');
			//执行重载
			table.reload('money_list', {
				page: {
					curr: 1 //重新从第 1 页开始
				}
				,url:"{:url('Tracelog/accountInfoLog')}"
				,where: {
					keywords:keywords.val(),
					start_time:start_time.val(),
					end_time:end_time.val(),
					ins_name:ins_name.val()
				}
			});
		}
	};

	//提交
	$('#layui-search-btn').on('click', function(){
		var type = $(this).data('type');
		active[type] ? active[type].call(this) : '';
		seart();
		$('#ins_name').val('');
	});
	//重置
	$('#layui-reset-btn').click(function(){
		$('input[type="text"]').val('');
		tableIn.reload();
	});

	//导出
	$('#layui-export-btn').click(function(){
		var keywords=$("#keywords").val();
		var update_time_start1=$("#reg_start_time").val();
		var update_time_end1=$("#reg_end_time").val();
		var ins_name=$("#ins_name").val();
		window.location.href="/admin/Tracelog/accountInfoLog.html?export=1&keywords="+keywords+"&start_time="+update_time_start1+"&end_time="+update_time_end1+"&ins_name="+ins_name;
	});

    //机构弹窗
	$('#ins_name').click(function(){
		$('#ins_name').val('');
		sessionStorage.removeItem('nodes');
		layer.open({
			type: 2,
			title:'选择代理',
			area: ['650px', '500px'],
			content: "{:url('agent/agentInfo')}"
			,closeBtn:2
			,btnAlign: 'c'
			,cancel: function(index, layero){ 
				//右上角关闭回调
				var nodes=sessionStorage.getItem('nodes');
				if(sessionStorage.getItem('nodes')==''||sessionStorage.getItem('nodes')==null){
					$('#ins_name').val('');
					layer.close(index);
				}else{
					var new_nodes=nodes.split(',');
					var new_str=[];
					for(var i=0;i<new_nodes.length;i++){
						if(new_nodes[i].indexOf('-')>0){
						  var arr=new_nodes[i].split('-');
						  new_str.push(arr[1]);
						}
					}
					$('#ins_name').val(new_str);
					layer.close(index);
				}
			}
		}); 
	});
        
  });
	function seart(){
		var keywords=$("#keywords").val();
		var update_time_start1=$("#reg_start_time").val();
		var update_time_end1=$("#reg_end_time").val();
		var ins_name=$("#ins_name").val();
		$.post("{:url('Tracelog/accountInfoLog','sear=1')}",
				{
					keywords:keywords,
					end_time:update_time_end1,
					ins_name:ins_name,
					start_time:update_time_start1
				},
				function(data){
					$("#prebalance").html(data.data.prebalance);
					$("#available").html(data.data.available);
					$("#balance").html(data.data.balance);
					$("#crj").html(data.data.crj);
					$("#deposit").html(data.data.deposit);
					$("#withdraw").html(data.data.withdraw);
				});
	}


</script>
</body>
</html>