    <script type="text/javascript">
        mui.init();
		function check_auth(){
			$.ajax({
				url: "/index/Api/is_relogin",
				type: 'post',
				data: {
					userid: localStorage.id,
					auth:localStorage.auth
				},
				cache: false,
				dataType: 'json',
				success: function(data) {
					if(null == data || "undefined" == typeof(data) || "" == data){
						mui.toast('登陆已过期，重新登陆！');
						window.location="{:url('/index/Qiquanb/login')}";
						return false;
						exit;
					}else{
						if(data.code==1){
							window.location="{:url('/index/Qiquanb/login')}";
							mui.toast('登陆已过期，重新登陆！');
							return false;
							exit;
						}else{
							return true;
						}
					}

				},
				error: function() {
					window.location="{:url('/index/Qiquanb/login')}";
					mui.toast('登陆已过期，重新登陆！');
					return false;
					exit;
				}
			});
		}
        $(function () {
			if(!localStorage.id) {
				window.location.href = "/index/Qiquanb/login.html"
			}
			check_auth();
            $("#on_incharge_done").click(function(){
                if(!$.trim($("#money1").val()))
                {
                    mui.alert('请输入充值金额');
                    return;

                }else{

					var payid = $("input[name='paypath1']:checked").val();

					

					if(payid==26)
						var url = "/index/Ips/create_order";
					else
						var url = "/index/Guofoo/create_order";
                    $.ajax({
                        type: 'POST',
                        url: url,
                        dataType: 'json',
                        data: {
                            userid: localStorage.id,
                            auth: localStorage.auth,
                            paytype: 'W01',
                            money: $.trim($("#money1").val())
                        },
                        async: false,
                        success:function(data){
                            if(data.pay_wap!='undefine'){
								
                                window.location.href =data.pay_wap;
                            }
                        }
                    });

                }
            });
            $("#wechat").click(function () {
                if($("#money").val()==''){
                    mui.alert('金额不能为空');
                    return;
                }
                $.ajax({
                    type: 'POST',
                    url: "/index/Api/pay",
                    dataType: 'json',
                    data: {
                        userid: localStorage.id,
                        auth: localStorage.auth,
                        paytype: 'W01',
                        money: $("#money").val()
                    },
                    async: false,
                    success: function(data) {
                        console.log(data);
                        // mui.alert(JSON.stringify(data));
                        if(data.code==1){
                            window.location=data.pay_url;
                        }
                    },
                    error: function() {
                        mui.toast('请求超时');
                    }
                });
            });
            $("#alipay").click(function () {
                $.ajax({
                    type: 'POST',
                    url: "/index/Api/pay",
                    dataType: 'json',
                    data: {
                        userid: localStorage.id,
                        auth: localStorage.auth,
                        paytype: 'A01',
                        money: $("#money").val()
                    },
                    async: false,
                    success: function(data) {
                        console.log(data);
                        if(data.code==1){
                            window.location=data.pay_url;
                        }
                    },
                    error: function() {
                        mui.toast('处理中');
                    }
                });
            });
        });
    </script>

