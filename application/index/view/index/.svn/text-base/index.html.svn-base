	function getNamemak(str) {
		var strChange = str.substring(Math.floor(str.length / 2), str.length);
		var num = str.length - Math.floor(str.length / 2);
		var str2 = "";
		for (var i = 0; i < num; i++) {
			str2 += "*";
		}
		var name = str.substring(0, Math.floor(str.length / 2)) + strChange.replace(strChange, str2);

		return name;
	}
