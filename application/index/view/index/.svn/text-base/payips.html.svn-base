		$("#dengjibtn_alipay").on("click", function () {
			console.log(2);
			$("#dengji_alipay").popup();
		});


		$('#uploaderInput').change(function () {
			var file_ = $('#uploaderInput')[0].files[0];
			var objUrl = $.getObjectURL(file_);
			$("#img0").attr("src", objUrl);
			$(".weui-uploader__file").css("background-image", "url(" + objUrl + ")");
			$(".weui-uploader__file").fadeIn();
			/* $.post("{:url('api/upload')}",{},function(res){
				var imgUrl=res.url;
				if(res.code==1){
					$("#img0").attr("src", imgUrl);
					$(".weui-uploader__file").css("background-image", "url(" + imgUrl + ")");
					$(".weui-uploader__file").fadeIn();
				}else{
					$.toast('请求超时');
				}
			}); */

		});

		$("#done").on("click", function () {
			if ($("#money_").val() == '') {
				$.alert('金额不能为空');
				return;
			} else if ($("#remark").val() == '') {
				$.alert('备注不能为空');
				return;
			} else if ($("#uploaderInput").val() == '') {
				$.alert('凭证图片未上传');
				return;
			}
			var formData = new FormData();
			var name = $("#uploaderInput").val();
			formData.append("charge_img", $("#uploaderInput")[0].files[0]);
			formData.append("uid", localStorage.id);
			formData.append("auth", localStorage.auth);
			formData.append("type", localStorage.type);
			formData.append("money", $("#money_").val());
			formData.append("remark", $("#remark").val());
			$.ajax({
				url: '/index/Api/offlineCharge',
				type: 'POST',
				data: formData,
				cache: false,
				processData: false,
				contentType: false,
				success: function (_d) {
					if (_d['code'] != 1) {
						$.alert(_d['msg']);
						return;
					}
					$.alert(_d['msg'], function () {
						history.go(-1);
					});
				},
				error: function (_d) {
					$.alert(_d['msg']);
				}
			});
		})
		
		$("#done_alipay").on("click", function () {
			if ($("#money_alipay").val() == '') {
				$.alert('金额不能为空');
				return;
			} else if ($("#remark_alipay").val() == '') {
				$.alert('备注不能为空');
				return;
			}
			var formData = new FormData();
			formData.append("uid", localStorage.id);
			formData.append("auth", localStorage.auth);
			formData.append("type", 2);
			formData.append("money", $("#money_alipay").val());
			formData.append("remark", $("#remark_alipay").val());
			$.ajax({
				url: '/index/Api/offlineCharge',
				type: 'POST',
				data: formData,
				cache: false,
				processData: false,
				contentType: false,
				success: function (_d) {
					if (_d['code'] != 1) {
						$.alert(_d['msg']);
						return;
					}
					$.alert(_d['msg'], function () {
						history.go(-1);
					});
				},
				error: function (_d) {
					$.alert(_d['msg']);
				}
			});
		});
		$("#done_online").on("click", function () {
			if ($("#online_money").val() == '') {
				$.alert('金额不能为空');
				return;
			} else if ($("#pay_username").val() == '') {
				$.alert('姓名不能为空');
				return;
			} else if ($("#pay_useridcard").val() == '') {
				$.alert('身份证不能为空');
				return;
			} else if ($("#pay_usercardno").val() == '') {
				$.alert('银行卡号不能为空');
				return;
			} else if ($("#pay_usercardphone").val() == '') {
				$.alert('手机不能为空');
				return;
			}
			var formData = new FormData();
			formData.append("uid", localStorage.id);
			formData.append("auth", localStorage.auth);
			formData.append("type", 3);
			formData.append("pay_username", $("#pay_username").val());
			formData.append("pay_useridcard", $("#pay_useridcard").val());
			formData.append("pay_usercardno", $("#pay_usercardno").val());
			formData.append("pay_usercardphone", $("#pay_usercardphone").val());
			window.location.href='/index/Api/sf_onpinecharge/pay_usercardphone/'+$("#pay_usercardphone").val()+'/pay_usercardno/'+$("#pay_usercardno").val()+'/pay_useridcard/'+$("#pay_useridcard").val()+'/money/'+$("#online_money").val()+'/pay_username/'+$("#pay_username").val()+'/uid/'+localStorage.id+'/auth/'+ localStorage.auth;
		});
		$(".cancel").on("click", function () {
			$.closePopup();
		});

		$(".wechat").click(function () {
			fn.pay('W01');
		});

		$(".alipay").click(function () {
			fn.pay('W01');
		});

		//建立一個可存取到該file的url
		$.getObjectURL = function (file) {
			var url = null;
			if (window.createObjectURL != undefined) { // basic
				url = window.createObjectURL(file);
			}
			else if (window.URL != undefined) {
				// mozilla(firefox)
				url = window.URL.createObjectURL(file);
			}
			else if (window.webkitURL != undefined) {
				// webkit or chrome
				url = window.webkitURL.createObjectURL(file);
			}
			return url;
		}



		$("#btn").click(function () {
			if ($("#money").val() == '') {
				$.alert('金额不能为空');
				return;
			} else if ($(".weui-check:checked").length <= 0) {
				$.alert('请选择一项支付方式');
				return;
			}
			var payid = $("input[name='paypath1']:checked").val();
			if (payid == 26){
				var url = "/index/Ips/create_order";
				$.ajax({
					type: 'POST',
					url: url,
					dataType: 'json',
					data: {
						userid: localStorage.id,
						auth: localStorage.auth,
						paytype: 'W01',
						money: $.trim($("#money").val())
					},
					async: false,
					success: function (data) {
						console.log(data);
						if(data.code==0){
							$.alert(data.msg);
						}else	if (data.pay_wap != 'undefine') {
							window.location.href = data.pay_wap;
						}
					}
				});
			}else if(payid == 27){
				var money=$.trim($("#money").val());
				var url = "/index/alipay/create_order"+'/money/'+money+'/userid/'+localStorage.id+'/auth/'+localStorage.auth+'/paytype/W02';
				window.location.href=url;;
			}
		});

		fn.init();
	});
</script>
