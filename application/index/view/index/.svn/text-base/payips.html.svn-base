			pay: function (_type) {
				if ($("#money").val() == '') {
					$.alert('金额不能为空');
					return;
				}
				$.ajax({
					type: 'POST',
					url: "/index/api/offlineCharge/",
					dataType: 'json',
					data: {
						uid: localStorage.id,
						auth: localStorage.auth,
						type: localStorage.type,
						money: $("#money").val()
					},
					async: false,
					success: function (data) {
						console.log(data);
						// mui.alert(JSON.stringify(data));
						if (data.code == 1) {
							window.location = data.pay_url;
						}
					},
					error: function () {
						$.toast('请求超时');
					}
				});
			}
		}

		$("#dengjibtn").on("click", function () {
			$("#dengji").popup();
		});
		$("#online_pay").on("click", function () {
