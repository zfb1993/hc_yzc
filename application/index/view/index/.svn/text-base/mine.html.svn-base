{block name="script"}
<script>
    $(function () {
        $("#quit").on("click", function () {
            localStorage.clear();
            window.location.href = '/index/index/login';
        });
        $("#kaihu").on("click", function () {
            if (localStorage.is_open == 0) {
                window.location.href = '/index/index/kaihu';
            } else if (localStorage.is_open == 2) {
                $.alert("已成功提交申请，等待审核");
            } else if (localStorage.is_open == 1) {
                window.location.href = '/index/index/dredge';
            }
        });
        if (localStorage.type == 1) {
            $("#fenxiang").show();
        }
        getUserInfo();
        if (localStorage.type == 0) {
            $("#fenxiang").hide();
        }
    });

    function checkshiming(){
        ///index/index/payips
        if (localStorage.bank_card != "") {
                window.location.href = '/index/index/payips';
            } else{
                $.alert("请先完成实名后，再充值！");
            }
    }
    function qrcode() {
        window.location.href = '/index/otherapi/qrcode?userid=' + localStorage.id;
    }
</script>
