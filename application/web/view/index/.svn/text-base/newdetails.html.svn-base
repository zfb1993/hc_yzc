<script type="text/javascript">
	$(function () {
		var urlData = {};
		var localarr = window.location.href.split('?')[1];
		try {
			localarr = localarr.split('=');
			urlData.newid = localarr[1];
		} catch (err) {
			console.log(err)

		}
		console.log(urlData.newid);
		$.get("/qihuo/News/detail?newsId=" + urlData.newid,
			function (data) {
				var reg = eval('(' + data + ')');
				var titstr = reg.data[0].title;
				var date = timestampToTime(reg.data[0].senddate);
				var source = reg.data[0].source;
				var content = reg.data[0].body;
				$("#title").html('<h2 style="text-align: justify;">' + titstr + '</h2>');
				$("#date").html(date);
				$("#source").html(source);
				$("#content").html(content);
				console.log(reg);
			});
	})

	function timestampToTime(timestamp) {
		var date = new Date(timestamp * 1000);//时间戳为10位需*1000，时间戳为13位的话不需乘1000
		Y = date.getFullYear() + '-';
		M = (date.getMonth() + 1 < 10 ? '0' + (date.getMonth() + 1) : date.getMonth() + 1) + '-';
		D = date.getDate() + ' ';
		h = date.getHours() + ':';
		m = date.getMinutes() + ':';
		s = date.getSeconds();
		return Y + M + D + h + m + s;
	}

